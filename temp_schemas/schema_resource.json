{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource",
  "description": "Reference material, raw knowledge.",
  "type": "object",
  "required": [
    "id",
    "type",
    "title",
    "body",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^R-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description": "Unique identifier for the resource (UUID prefixed with R-)"
    },
    "type": {
      "type": "string",
      "enum": ["resource"],
      "description": "Type of the entity"
    },
    "title": {
      "type": "string",
      "description": "Title of the resource"
    },
    "body": {
      "type": "string",
      "description": "Content or description of the resource"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Keywords or tags for categorization"
    },
    "related_zettels": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^Z-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      "description": "IDs of related zettels"
    },
    "related_projects": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^P-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      "description": "IDs of related projects"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of creation (ISO 8601)"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last update (ISO 8601)"
    }
  },
  "indexes": [
    "id",
    "created_at",
    "updated_at",
    "type",
    "title",
    "tags"
  ],
  "example": {
    "id": "R-12345678-abcd-efgh-ijkl-1234567890ab",
    "type": "resource",
    "title": "Atomic Habits by James Clear",
    "body": "Summary of key concepts from the book Atomic Habits: habit stacking, 2-minute rule, environment design.",
    "tags": ["book", "habits", "productivity"],
    "related_zettels": ["Z-c1d2e3f4-a5b6-7c8d-9e0f-1234567890ab"],
    "related_projects": [],
    "created_at": "2025-01-10T11:00:00Z",
    "updated_at": "2025-01-10T11:00:00Z"
  }
}
