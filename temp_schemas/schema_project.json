{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project",
  "description": "Outcome with multiple steps.",
  "type": "object",
  "required": [
    "id",
    "type",
    "title",
    "desired_outcome",
    "why_it_matters",
    "success_criteria",
    "status",
    "area",
    "horizon",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^P-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description": "Unique identifier for the project (UUID prefixed with P-)"
    },
    "type": {
      "type": "string",
      "enum": ["project"],
      "description": "Type of the entity"
    },
    "title": {
      "type": "string",
      "description": "Title of the project"
    },
    "desired_outcome": {
      "type": "string",
      "description": "The specific outcome the project aims to achieve"
    },
    "why_it_matters": {
      "type": "string",
      "description": "The fundamental reason or value driving this project"
    },
    "success_criteria": {
      "type": "string",
      "description": "Measurable conditions that define project success"
    },
    "status": {
      "type": "string",
      "enum": ["active", "someday", "waiting", "completed", "dropped"],
      "description": "Current status of the project"
    },
    "area": {
      "type": "string",
      "pattern": "^A-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description": "ID of the associated area"
    },
    "horizon": {
      "type": "string",
      "enum": ["H1"],
      "description": "Horizon level of the project (H1 = Projects)"
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^R-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      "description": "IDs of related resources"
    },
    "related_zettels": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^Z-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      "description": "IDs of related zettels"
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^T-[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      "description": "IDs of associated next actions (tasks)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of creation (ISO 8601)"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last update (ISO 8601)"
    }
  },
  "indexes": [
    "id",
    "created_at",
    "updated_at",
    "type",
    "area",
    "project"
  ],
  "example": {
    "id": "P-a1b2c3d4-e5f6-7a8b-9c0d-1234567890ab",
    "type": "project",
    "title": "Launch LifeOS Beta",
    "desired_outcome": "Functional LifeOS MVP deployed to 3 users for feedback.",
    "why_it_matters": "To validate core functionality and gather real-world usage data.",
    "success_criteria": "3 users actively using the system for 2 weeks, provided structured feedback, and reported satisfaction >= 8/10.",
    "status": "active",
    "area": "A-f1e2d3c4-b5a6-7c8d-9e0f-1234567890ab",
    "horizon": "H1",
    "resources": ["R-12345678-abcd-efgh-ijkl-1234567890ab"],
    "related_zettels": ["Z-c1d2e3f4-a5b6-7c8d-9e0f-1234567890ab"],
    "next_actions": ["T-f1e2d3c4-b5a6-7c8d-9e0f-1234567890ab"],
    "created_at": "2025-01-05T09:00:00Z",
    "updated_at": "2025-01-10T11:30:00Z"
  }
}
